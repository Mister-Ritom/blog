---
import type { Post } from '@data/blog';
import { calculateReadingTime } from '@data/blog';
import CategoryBadge from './CategoryBadge.astro';
import urlBuilder from '@sanity/image-url';
import { client } from '@utils/sanity-client';

interface Props {
    post: Post;
}

const { post } = Astro.props;
const builder = urlBuilder(client);

function getImageUrl(source: any, width: number) {
    if (!source) return null;
    return builder.image(source).width(width).url();
}

const featuredImageUrl = getImageUrl(post.featuredImage, 500);
const readingTime = calculateReadingTime(post.content);

const publishDate = new Date(post.publishedAt).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});
---

<article class="blog-card">
    <a href={`/blog/${post.slug.current}`} class="card-link">
        {featuredImageUrl && (
            <div class="card-image-wrapper">
                <img
                    src={featuredImageUrl}
                    alt={post.featuredImage?.alt || ''}
                    class="card-image"
                    loading="lazy"
                />
            </div>
        )}
        <div class="card-content">
            {post.categories && post.categories.length > 0 && (
                <div class="card-categories">
                    {post.categories.map((category) => (
                        <CategoryBadge category={category} size="sm" />
                    ))}
                </div>
            )}
            <h2 class="card-title">{post.title}</h2>
            <p class="card-excerpt">{post.excerpt}</p>
            <div class="card-meta">
                <span class="meta-author">{post.author.name}</span>
                <span class="meta-separator">•</span>
                <time datetime={post.publishedAt} class="meta-date">{publishDate}</time>
                <span class="meta-separator">•</span>
                <span class="meta-reading-time">{readingTime} min read</span>
            </div>
        </div>
    </a>
</article>

<style>
    .blog-card {
        display: flex;
        flex-direction: column;
        background-color: var(--base-100);
        border: 1px solid var(--fallback-bc,oklch(var(--bc)/.1));
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }

    .blog-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    }

    .card-link {
        display: flex;
        flex-direction: column;
        height: 100%;
        text-decoration: none;
        color: inherit;
    }

    .card-image-wrapper {
        position: relative;
        width: 100%;
        padding-top: 56.25%; /* 16:9 aspect ratio */
        overflow: hidden;
        background-color: var(--base-200);
    }

    .card-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

    .blog-card:hover .card-image {
        transform: scale(1.05);
    }

    .card-content {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .card-categories {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1.3;
        color: var(--base-content);
        margin: 0 0 0.75rem 0;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .card-excerpt {
        font-size: 0.9375rem;
        line-height: 1.6;
        color: var(--fallback-bc,oklch(var(--bc)/.7));
        margin: 0 0 1rem 0;
        flex: 1;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .card-meta {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--fallback-bc,oklch(var(--bc)/.5));
    }

    .meta-author {
        font-weight: 500;
        color: var(--fallback-bc,oklch(var(--bc)/.7));
    }

    .meta-separator {
        color: var(--fallback-bc,oklch(var(--bc)/.3));
    }

    .meta-date,
    .meta-reading-time {
        color: var(--fallback-bc,oklch(var(--bc)/.5));
    }

    @media (max-width: 768px) {
        .card-title {
            font-size: 1.25rem;
        }

        .card-content {
            padding: 1.25rem;
        }
    }
</style>
