---
import Layout from '@layouts/Layout.astro';
import BlogCard from '@components/BlogCard.astro';
import AdSenseUnit from '@components/AdSenseUnit.astro';
import { fetchAllPosts } from '@data/blog';

const allPosts = await fetchAllPosts();

// Pagination
const POSTS_PER_PAGE = 12;
const currentPage = 1; // TODO: Implement pagination with query params
const totalPages = Math.ceil(allPosts.length / POSTS_PER_PAGE);
const paginatedPosts = allPosts.slice(0, POSTS_PER_PAGE);

const pageTitle = 'Blog';
const pageDescription = 'Read the latest articles about web development, technology, and more from Ritom.';
---

<Layout title={pageTitle} description={pageDescription} addTitleSuffix={true}>
    <main class="blog-listing">
        <div class="container">
            <header class="page-header">
                <h1 class="page-title">Blog</h1>
                <p class="page-description">
                    Thoughts, tutorials, and insights on web development and technology
                </p>
            </header>

            {paginatedPosts.length > 0 ? (
                <div class="posts-grid">
                    {paginatedPosts.map((post) => (
                        <BlogCard post={post} />
                    ))}
                </div>
            ) : (
                <div class="no-posts">
                    <p>No blog posts yet. Check back soon!</p>
                </div>
            )}

            {totalPages > 1 && (
                <nav class="pagination" aria-label="Pagination">
                    <button 
                        class="pagination-button" 
                        disabled={currentPage === 1}
                        aria-label="Previous page"
                    >
                        ← Previous
                    </button>
                    <span class="pagination-info">
                        Page {currentPage} of {totalPages}
                    </span>
                    <button 
                        class="pagination-button" 
                        disabled={currentPage === totalPages}
                        aria-label="Next page"
                    >
                        Next →
                    </button>
                </nav>
            )}

            <!-- AdSense Placement -->
            <div class="ad-container">
                <AdSenseUnit adFormat="auto" />
            </div>
        </div>
    </main>
</Layout>

<style>
    .blog-listing {
        padding: 4rem 0;
        min-height: 60vh;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .page-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .page-title {
        font-size: 3rem;
        font-weight: 800;
        color: var(--base-content);
        margin: 0 0 1rem 0;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .page-description {
        font-size: 1.25rem;
        color: var(--fallback-bc,oklch(var(--bc)/.7));
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .posts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .no-posts {
        text-align: center;
        padding: 4rem 0;
        color: #6B7280;
        font-size: 1.125rem;
    }

    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        margin-top: 4rem;
    }

    .pagination-button {
        padding: 0.75rem 1.5rem;
        border: 1px solid var(--fallback-bc,oklch(var(--bc)/.2));
        border-radius: 0.5rem;
        background-color: var(--base-100);
        color: var(--base-content);
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .pagination-button:hover:not(:disabled) {
        background-color: var(--base-200);
    }

    .pagination-button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .pagination-info {
        color: #6B7280;
        font-size: 0.9375rem;
    }

    @media (max-width: 768px) {
        .blog-listing {
            padding: 3rem 0;
        }

        .page-title {
            font-size: 2.25rem;
        }

        .page-description {
            font-size: 1.125rem;
        }

        .posts-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .pagination {
            flex-direction: column;
            gap: 1rem;
        }

        .pagination-button {
            width: 100%;
        }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
        .posts-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>
